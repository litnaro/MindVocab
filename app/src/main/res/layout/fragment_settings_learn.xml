<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:padding="@dimen/main_screen_padding"
    tools:context=".screens.settings.learn.SettingsLearnFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изучение слов"
        android:textSize="@dimen/main_heading_size"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Свайп вправо"
            android:textSize="@dimen/secondary_heading_size"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/toRightSwapActionSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Свайп влево"
            android:textSize="@dimen/secondary_heading_size"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/toLeftSwapActionSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Озвучивать слово при появлении"
            android:textSize="@dimen/secondary_heading_size"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/listenWordSwitch"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Порядок слов"
            android:textSize="@dimen/secondary_heading_size"
            android:layout_weight="1"/>

        <Spinner
            android:id="@+id/wordsOrderSpinner"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:padding="5dp"/>
    </LinearLayout>

</LinearLayout>