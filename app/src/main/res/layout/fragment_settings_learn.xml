<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".screens.settings.learn.SettingsLearnFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Изучение слов"
        android:textSize="@dimen/secondary_heading_size"
        android:layout_marginStart="10dp"
        android:textStyle="bold"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        app:contentPadding="10dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="?attr/colorPrimaryContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Свайп вправо"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/toRightSwapActionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Свайп влево"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/toLeftSwapActionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Озвучивать слово при появлении"
                    android:textSize="@dimen/simple_text_size"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/listenWordSwitch"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Порядок слов"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/wordsOrderSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>