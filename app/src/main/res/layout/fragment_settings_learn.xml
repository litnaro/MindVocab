<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/default_card_corner_radius"
    app:contentPadding="@dimen/default_card_padding"
    app:cardBackgroundColor="?attr/colorPrimaryContainer"
    tools:context=".screens.settings.learn.SettingsLearnFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Изучение слов"
            android:textSize="@dimen/simple_text_size"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_phonelink_ring"
                app:tint="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Озвучивать при появлении"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="50dp"
                android:layout_height="28dp"
                android:layout_gravity="center" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_timer"
                app:tint="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Слов в день"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_swipe_right"
                app:tint="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Свайп вправо"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_swipe_left"
                app:tint="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Свайп влево"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_format_list_numbered"
                app:tint="?attr/colorOnPrimaryContainer"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Порядок слов"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        app:contentPadding="10dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        app:cardBackgroundColor="?attr/colorPrimaryContainer">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Свайп вправо"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/toRightSwapActionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Свайп влево"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/toLeftSwapActionSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Озвучивать слово при появлении"
                    android:textSize="@dimen/simple_text_size"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:layout_gravity="center"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"/>

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/listenWordSwitch"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="5dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="?attr/colorOnPrimaryContainer"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Порядок слов"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_weight="1"/>

                <Spinner
                    android:id="@+id/wordsOrderSpinner"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:padding="5dp"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.cardview.widget.CardView>