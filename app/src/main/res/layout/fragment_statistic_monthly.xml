<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/statistic_container_size"
    android:padding="5dp"
    tools:context=".screens.statistic.monthly.StatisticMonthlyFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/default_card_corner_radius"
        android:elevation="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:headerColor="?attr/colorPrimaryContainer"
            app:headerLabelColor="?attr/colorOnPrimaryContainer"
            app:selectionDisabled="true"
            app:pagesColor="?attr/colorTertiaryContainer"
            app:todayLabelColor="?attr/colorOnTertiaryContainer"
            app:daysLabelsColor="?attr/colorOnTertiaryContainer"
            app:abbreviationsBarColor="?attr/colorPrimaryContainer"
            app:abbreviationsLabelsColor="?attr/colorOnPrimaryContainer"
            app:selectionBetweenMonthsEnabled="false"
            app:type="classic"
            />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>