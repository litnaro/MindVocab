<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.settings.SettingsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_screen_padding"
        android:orientation="vertical">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/accountSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout="@layout/fragment_settings_account_preview"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/applicationSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_settings_application"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/notificationSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_settings_notifications"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/repeatSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_settings_repeat"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/learnSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_settings_learn"/>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/additionalSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:layout="@layout/fragment_settings_additional"/>

    </LinearLayout>

</ScrollView>