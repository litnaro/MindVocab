<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/default_card_corner_radius"
    app:contentPadding="@dimen/default_card_padding"
    app:cardBackgroundColor="?attr/colorPrimaryContainer"
    tools:context=".screens.settings.application.SettingsApplicationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/application_settings_title"
            android:textSize="@dimen/simple_text_size"
            android:textColor="?attr/colorOnPrimaryContainer"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/themeSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            android:layout_marginStart="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_dark_mode"
                app:tint="?attr/colorOnPrimaryContainer"
                android:contentDescription="@string/application_theme_settings_content_description" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/application_theme_settings"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/themeSettingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Dark"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/button_to_change_settings_content_description" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/languageSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_translate"
                app:tint="?attr/colorOnPrimaryContainer"
                android:contentDescription="@string/interface_language_settings_content_description" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/interface_language_settings"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/languageSettingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="English"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/button_to_change_settings_content_description"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/nativeLanguageSettingsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:paddingVertical="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_language"
                app:tint="?attr/colorOnPrimaryContainer"
                android:contentDescription="@string/interface_native_language_settings_content_description" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/interface_native_language_settings"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/nativeLanguageSettingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="English"
                android:textSize="@dimen/simple_text_size"
                android:textColor="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="6dp"/>

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_arrow_right"
                app:tint="?attr/colorOnPrimaryContainer"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/button_to_change_settings_content_description"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>