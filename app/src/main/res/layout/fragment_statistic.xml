<!--            app:layout_constraintTop_toTopOf="parent"/>-->

        <TextView
            android:id="@+id/dailyProgressPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginBottom="70dp"
            app:layout_constraintStart_toStartOf="@+id/dailyProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/dailyProgressBar"
            app:layout_constraintTop_toTopOf="@+id/dailyProgressBar"
            app:layout_constraintBottom_toBottomOf="@+id/dailyProgressBar"/>

        <TextView
            android:id="@+id/dailyProgressDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="дней подряд"
            android:textSize="@dimen/simple_text_size"
            app:layout_constraintStart_toStartOf="@+id/dailyProgressBar"
            app:layout_constraintEnd_toEndOf="@+id/dailyProgressBar"
            app:layout_constraintTop_toBottomOf="@+id/dailyProgressPercentage"/>

        <TextView
            android:id="@+id/monthlyHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingVertical="10dp"
            android:text="За месяц"
            android:textSize="@dimen/secondary_heading_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dailyProgressBar"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/todayDateContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="@dimen/default_card_corner_radius"
            app:contentPadding="@dimen/big_card_padding"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/monthlyHeading">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    app:cardBackgroundColor="?attr/colorOnPrimaryContainer">

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Апрель 2023"
                    android:textSize="@dimen/simple_text_size"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/04/2023"
                    android:textColor="?attr/colorOnPrimaryContainer"
                    android:textSize="@dimen/simple_text_size"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/calendarContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="@dimen/default_card_corner_radius"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/todayDateContainer">
            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/achievementHeading"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingVertical="10dp"
            android:layout_marginTop="5dp"
            android:text="Достижения"
            android:textSize="@dimen/secondary_heading_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
