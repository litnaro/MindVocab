<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.statistic.StatisticFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/main_screen_padding">

        <ProgressBar
            android:id="@+id/wordsLearnedProgress"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/wordsLearnedProgressText"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="100%"
            android:textAlignment="center"
            android:textSize="@dimen/main_heading_size"
            app:layout_constraintStart_toStartOf="@+id/wordsLearnedProgress"
            app:layout_constraintEnd_toEndOf="@+id/wordsLearnedProgress"
            app:layout_constraintTop_toTopOf="@+id/wordsLearnedProgress"
            app:layout_constraintBottom_toBottomOf="@+id/wordsLearnedProgress"/>

        <TextView
            android:id="@+id/entireAmountOfWords"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Всего слов: 200"
            android:textSize="@dimen/secondary_heading_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordsLearnedProgress"/>

        <TextView
            android:id="@+id/wordsKnownAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Уже известно: 100"
            android:textSize="@dimen/secondary_heading_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/entireAmountOfWords"/>

        <TextView
            android:id="@+id/wordsLearnedAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Выучено: 100"
            android:textSize="@dimen/secondary_heading_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordsKnownAmount"/>

        <TextView
            android:id="@+id/wordsLeftAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Осталось слов: 100"
            android:textSize="@dimen/secondary_heading_size"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wordsLearnedAmount"/>

        <TextView
            android:id="@+id/achievementsHeadings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:text="Достижения"
            android:textSize="@dimen/main_heading_size"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/achievementsListType"
            app:layout_constraintTop_toBottomOf="@+id/wordsLeftAmount"/>

        <ImageView
            android:id="@+id/achievementsListType"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_filter"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/achievementsHeadings"
            app:layout_constraintBottom_toBottomOf="@+id/achievementsHeadings"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/achievementsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            tools:itemCount="4"
            tools:listitem="@layout/item_achievement"
            app:layout_constraintTop_toBottomOf="@+id/achievementsHeadings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>